@model AdventureChallenge.Models.Challenge

@{
    ViewData["Title"] = "Search";
}

<h1 class="text-center">Zoek een challenge</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Search">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Prijs" class="control-label">Maximale prijs</label>
                <input asp-for="Prijs" class="form-control" placeholder="€"/>
                <span asp-validation-for="Prijs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tijdstip" class="control-label">Tijdstip uitvoering</label>
                <select asp-for="Tijdstip" class="form-control">
                    <option value="'s Ochtends">'s Ochtends</option>
                    <option value="'s Middags">'s Middags</option>
                    <option value="'s Avonds">'s Avonds</option>
                    <option value="'s Nachts">'s Nachts</option>
                </select>
                <span asp-validation-for="Tijdstip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Personen" class="control-label">Aantal personen</label>
                <input asp-for="Personen" class="form-control" type="number" min="1" step="1"/>
                <span asp-validation-for="Personen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Status" type="hidden" class="form-control" value="Goedgekeurd" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tijdduur" class="control-label">Tijds duur in hele uren</label>
                <input asp-for="Tijdduur" class="form-control" type="number" min="0.5" step="0.5"/>
                <span asp-validation-for="Tijdduur" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@Html.ValidationMessage("CustomError")

<div>
    <a asp-controller="Home" asp-action="Index">Back to Home</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
