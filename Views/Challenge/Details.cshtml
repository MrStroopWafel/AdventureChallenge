@model AdventureChallenge.Models.Challenge 

@{
    ViewData["Title"] = "Challenge";
}

<h1 class="text-center">Werk aan de challenge</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Prijs)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prijs)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tijdstip)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tijdstip)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Personen)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Personen)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tijdduur)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tijdduur)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>


<div class="container">
    <form asp-action="Details" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="row text-center">
            <div class="col-md-6">
                <p class="text-left">Money - tijd van dag - duratie tijd</p>
                <img class="" src="~/img/black-square.jpg" width="300px">
            </div>
            <div class="col-md-6">
                <div class="row">
                    <label for="Beschrijving"></label>
                    <textarea name="Beschrijving" id="Beschrijving" placeholder="Geef een korte samevatting van de ervaring..." rows="4" cols="50"></textarea>
                </div>
                <div class="row-md-auto">
                    <label for="Upload"></label>
                    <input class="text-center" type="file" name="Upload" id="Upload">
                </div>
            </div>
        </div>
        <div class="text-center">
            <input type="submit" value="Afronden" class="btn btn-primary" />
        </div>
    </form>
</div>





























